!!! 5
%head
  %meta{:charset => "utf-8"}
  %meta{'http-equiv' => "X-UA-Compatible", :content => "IE=edge,chrome=1"}
  %title FuelWatch Demo
  %meta{:content => "", :name => "description"}
  %meta{:content => "", :name => "author"}
  %meta{:content => "True", :name => "HandheldFriendly"}
  %meta{:content => "320", :name => "MobileOptimized"}
  %meta{:content => "width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no", :name => "viewport"}
  %meta{:content => "yes", :name => "apple-mobile-web-app-capable"}
  %meta{:content => "black", :name => "apple-mobile-web-app-status-bar-style"}
  %link{:href => "/favicon.ico", :rel => "shortcut icon"}
  /[if IE]
    %script{:src => "http://html5shiv.googlecode.com/svn/trunk/html5.js"}
  %link{:href => "stylesheets/stylesheet.css", :rel => "stylesheet"}
  %script{:type => "text/javascript", :src => "http://maps.googleapis.com/maps/api/js?sensor=false"}
  %script{:charset => "utf-8", :src => "js/jquery.min.js", :type => "text/javascript"}
  %script{:type => "text/javascript", :src => "js/app.js"}

%body
  %section#home.current
    %nav
      %ul
        %li#near-me
          %a{:id => 'findMeNow', :name => 'findMeNow', :class => 'button near-me'} Fuel Prices Near Me
        %li#map
          %a{:id => 'mapNearby', :name => 'mapNearby', :class => 'button map'} Nearby Fuel Stations
        %li#search
          %a{:id => 'advSearch', :name => 'advSearch', :class => 'button advSearch'} Advanced Search
          / %form{:id => 'searchForm', :action => 'search.jspx'}
          / %button{:type => 'submit', :id => 'submitterator', :name => 'submitterator'} Advanced Search   
  %section#search
    %header
      %h1 Search
      .back-button
        %a.home.button{:href => '#'} Home
    .container
      .content-wrapper
        %form{:id => 'searchForm', :action => 'search.jspx'}
          .input-container
            %ul
              %li 
                %input{:id => "suburb", :name => "suburb", :type => "text", :placeholder => "Suburb"}
              %li
                %select{:id => "fueltype", :name => "fueltype"}
                  %option{:value => "", :selected => "selected", :disabled => "disabled"} Select Fuel
                  %option{:value => "1"} Unleaded
                  %option{:value => "2"} Premium Unleaded
                  %option{:value => "4"} Diesel
                  %option{:value => "5"} LPG
                  %option{:value => "6"} 98 RON
                  %option{:value => "7"} B20
              %li
                %select
                  %option{:value => "", :selected => "selected", :disabled => "disabled"} Surrounding
                  %option{:value => "1"} Yes
                  %option{:value => "1"} No
          .button-container
            %button{:type => 'submit', :id => 'submitterator', :name => 'submitterator'} Find Fuel Prices


